<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/tx
         http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
         http://www.osgi.org/xmlns/blueprint/v1.0.0
         http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

<!-- 
 -->
 
   <reference id="accountRepository" interface="com.pe_international.sample.datajpa.AccountRepository"/>
 
	<reference id="customerDAO" interface="com.pe_international.sample.service.CustomerDAO" />

	<bean id="sampleCommandProvider" class="com.pe_international.sample.console.SampleCommandProvider">
		<property name="customerDAO" ref="customerDAO" />
		<property name="accountRepository" ref="accountRepository" />
	</bean>
	
  <service ref="sampleCommandProvider" auto-export="interfaces" />

</blueprint>

